<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Banner Management | Watch Shop</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Josefin+Sans:wght@400;500;600;700&display=swap"
        rel="stylesheet">

    <link rel="stylesheet" href="/css/admin-sidebar.css">

    <style>
        body {
            font-family: "Josefin Sans", sans-serif;
        }

        .admin-title {
            font-weight: 700;
            color: #111;
        }

        .btn-add {
            background-color: #ff2020;
            color: white;
            border: none;
        }

        .btn-add:hover {
            background-color: #e01c1c;
            color: white;
        }

        .banner-thumb {
            width: 120px;
            height: 60px;
            object-fit: cover;
            border-radius: 6px;
            border: 1px solid #ddd;
        }

        .table-header {
            background-color: #ff2020;
            color: white;
        }

        .modal-content {
            border-radius: 10px;
        }

        .btn-save {
            background-color: #ff2020;
            color: white;
            border: none;
        }

        .btn-save:hover {
            background-color: #e01c1c;
        }

        .admin-main {
            margin-left: 260px !important;
            /* SAME AS PRODUCTS PAGE */
            padding: 20px;
        }
    </style>
</head>

<body>

    <!-- SIDEBAR -->
    <%- include('../partials/admin/_sidebar', { activePage: 'banner' }) %>

        <main class="admin-main">
            <div class="container-fluid py-4">

                <!-- TITLE + ADD BUTTON -->
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h2 class="admin-title">Banner Management</h2>

                    <button class="btn btn-add" data-bs-toggle="modal" data-bs-target="#addBannerModal">
                        <i class="fas fa-plus me-2"></i>Add Banner
                    </button>
                </div>

                <!-- BANNER TABLE -->
                <div class="card shadow-sm">
                    <div class="card-body p-0">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="table-header">
                                <tr>
                                    <th>#</th>
                                    <th>Banner</th>
                                    <th>Main Heading</th>
                                    <th>Subheading</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>

                            <tbody>
                                <% if (banners && banners.length> 0) { %>
                                    <% banners.forEach((banner, index)=> { %>
                                        <tr>
                                            <td>
                                                <%= index + 1 %>
                                            </td>

                                            <td>
                                                <img src="<%= banner.bannerImage %>" class="banner-thumb">
                                            </td>

                                            <td>
                                                <%= banner.main %>
                                            </td>

                                            <td>
                                                <%= banner.sub %>
                                            </td>

                                            <td>
                                                <form action="/admin/banners/delete/<%= banner._id %>" method="POST"
                                                    class="d-inline">
                                                    <button class="btn btn-sm btn-danger">
                                                        Delete
                                                    </button>
                                                </form>
                                            </td>
                                        </tr>
                                        <% }) %>

                                            <% } else { %>
                                                <tr>
                                                    <td colspan="5" class="text-center text-muted py-4">
                                                        No banners found
                                                    </td>
                                                </tr>
                                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>

            </div>
        </main>

        <!-- ADD BANNER MODAL -->
        <div class="modal fade" id="addBannerModal" tabindex="-1" aria-labelledby="addBannerLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered modal-lg">
                <div class="modal-content">

                    <div class="modal-header">
                        <h5 class="modal-title fw-bold">Add Banner</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>

                    <form action="/admin/banners/add" method="POST" enctype="multipart/form-data">
                        <div class="modal-body">

                            <div class="row">
                                <div class="col-md-12 mb-3">
                                    <label class="form-label">Main Heading</label>
                                    <input type="text" name="main" class="form-control" required>
                                </div>

                                <div class="col-md-12 mb-3">
                                    <label class="form-label">Subheading</label>
                                    <input type="text" name="sub" class="form-control" required>
                                </div>

                                <div class="col-md-12 mb-3">
                                    <label class="form-label">Banner Image</label>
                                    <input type="file" name="bannerImage" class="form-control" required>
                                </div>
                            </div>

                        </div>

                        <div class="modal-footer">
                            <button class="btn btn-save w-100" type="submit">Save Banner</button>
                        </div>

                    </form>

                </div>
            </div>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

</body>

</html>