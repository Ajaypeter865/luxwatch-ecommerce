<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Contact | Watch Shop</title>

  <!-- CSS -->
  <link rel="stylesheet" href="/css/bootstrap.min.css" />
  <link rel="stylesheet" href="/css/owl.carousel.min.css" />
  <link rel="stylesheet" href="/css/flaticon.css" />
  <link rel="stylesheet" href="/css/slicknav.css" />
  <link rel="stylesheet" href="/css/animate.min.css" />
  <link rel="stylesheet" href="/css/magnific-popup.css" />
  <link rel="stylesheet" href="/css/fontawesome-all.min.css" />
  <link rel="stylesheet" href="/css/themify-icons.css" />
  <link rel="stylesheet" href="/css/slick.css" />
  <link rel="stylesheet" href="/css/nice-select.css" />
  <link rel="stylesheet" href="/css/style.css" />
  <link rel="stylesheet" href="/css/contact.css" />

  <!-- Page Responsive Fixes -->
  <style>
    .contact-section {
      padding: 60px 0;
      background: #fff;
    }

    .contact-title {
      font-size: 32px;
      color: #ff2020;
      text-align: left;
      margin-bottom: 20px;
    }

    .contact-form input,
    .contact-form textarea {
      border: 1px solid #ccc;
      padding: 12px;
      margin-bottom: 15px;
      border-radius: 5px;
      width: 100%;
    }

    .send-btn {
      background: #ff2020;
      border: none;
      padding: 12px 25px;
      border-radius: 5px;
      color: #fff;
      font-weight: 600;
      transition: 0.2s;
    }

    .send-btn:hover {
      background: #e00000;
    }

    .info-box {
      display: flex;
      align-items: center;
      gap: 15px;
      margin-bottom: 25px;
    }

    .info-box i {
      color: #ff2020;
      font-size: 30px;
    }

    @media (max-width: 768px) {
      .contact-title {
        text-align: center;
        font-size: 28px;
      }

      .info-box {
        flex-direction: column;
        text-align: center;
      }
    }
  </style>
</head>

<body>

  <!-- NAVBAR -->
  <%- include('../partials/user/navbar') %>
  <%- include('../partials/user/_toastify', { success: success, error: error }) %>

  <!-- HERO SECTION -->
  <main>
    <div class="slider-area">
      <div class="single-slider slider-height2 d-flex align-items-center">
        <div class="container">
          <div class="row">
            <div class="col-xl-12 text-center">
              <div class="hero-cap">
                <h2>Contact Us</h2>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- CONTACT SECTION -->
    <section class="contact-section">
      <div class="container">
        <div class="row">

          <!-- LEFT: FORM -->
          <div class="col-lg-8">
            <h2 class="contact-title">Get in Touch</h2>

            <form action="/contact" method="POST" class="contact-form">

              <textarea name="message" placeholder="Enter Message" required rows="5"></textarea>

              <div class="row">
                <div class="col-sm-6">
                  <input type="text" name="name" placeholder="Enter your name" required />
                </div>

                <div class="col-sm-6">
                  <input type="email" name="email" placeholder="Email" required />
                </div>
              </div>

              <input type="text" name="subject" placeholder="Enter Subject" required />

              <button type="submit" class="send-btn">SEND</button>
            </form>
          </div>

          <!-- RIGHT: INFO BOXES -->
          <div class="col-lg-4 contact-info-section">

            <div class="info-box">
              <i class="fa fa-home"></i>
              <div>
                <h4>Kannur Azhikode.</h4>
                <p>Poothapara, CA 91770</p>
              </div>
            </div>

            <div class="info-box">
              <i class="fa fa-phone"></i>
              <div>
                <h4>+1 253 565 2365</h4>
                <p>Mon to Fri 9am to 6pm</p>
              </div>
            </div>

            <div class="info-box">
              <i class="fa fa-envelope"></i>
              <div>
                <h4>support@timezone.com</h4>
                <p>Send us your query anytime!</p>
              </div>
            </div>

          </div>

        </div>
      </div>
    </section>
  </main>

  <!-- FOOTER -->
  <%- include('../partials/user/footer') %>

  <!-- JS FILES -->
  <script src="/js/vendor/jquery-1.12.4.min.js"></script>
  <script src="/js/bootstrap.min.js"></script>
  <script src="/js/jquery.slicknav.min.js"></script>
  <script src="/js/main.js"></script>

</body>

</html>
