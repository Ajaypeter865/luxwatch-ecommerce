      <!-- Main Content -->
      <main class="order-confirmation-main py-5">
        <div class="container">
          <div class="order-confirm-box shadow-box p-4 mx-auto">
            <h3 class="text-success text-center mb-2">Order Confirmed!</h3>
            <p class="text-center mb-4">Thank you for your purchase, <strong>
                <%= order.shippingAddress.fullName %>
              </strong>!</p>

            <!-- Order Summary -->
            <div class="order-summary-section">
              <h5 class="section-title">Order Summary</h5>
              <p><strong>Order ID:</strong> #<%= order._id %>
              </p>
              <p><strong>Payment Method:</strong>
                <%= order.paymentMethod %>
              </p>
              <p><strong>Order Date:</strong>
                <%= order.placedAt%>
              </p>
              <hr>

              <!-- Shipping Address -->
              <div class="shipping-section mb-4">
                <h5 class="section-title">Shipping Address</h5>
                <div class="address-box p-3 rounded">
                  <p><strong>
                      <%= order.shippingAddress.label %>
                    </strong></p>
                  <p>
                    <%= order.shippingAddress.addressLine %>,
                      <%= order.shippingAddress.city %>
                  </p>
                  <p>
                    <%= order.shippingAddress.state %> - <%= order.shippingAddress.pincode %>
                  </p>
                  <p>Phone: <%= order.shippingAddress.phone %>,
                      Alt Phone: <%= order.shippingAddress.alternatePhone %>
                  </p>
                </div>
              </div>

              <!-- Ordered Items -->
              <div class="ordered-items mb-3">
                <h5 class="section-title">Ordered Items</h5>
                <% order.orderItems.forEach(item=> { %>
                  <div class="ordered-item d-flex justify-content-between align-items-center border-bottom py-2">
                    <div>
                      <strong>
                        <%= item.name %>
                      </strong>
                      <p class="m-0 small text-muted">Qty: <%= item.quantity %>
                      </p>
                    </div>
                    <span>₹<%= item.price %></span>
                  </div>
                  <% }) %>
              </div>

              <hr>

              <!-- Total -->
              <div class="d-flex justify-content-between total-line mt-3">
                <strong>Total:</strong>
                <strong>₹<%= order.grandTotal.toLocaleString('en-IN') %></strong>
              </div>
            </div>

            <!-- Buttons -->
            <div class="text-center mt-4">
              <a href="/shop" class="btn btn-continue me-2">Continue Shopping</a>
              <button onclick="window.print()" class="btn btn-print">Print this Page</button>
            </div>
          </div>
        </div>
      </main>

      <%- include('../partials/user/footer') %>

        <!-- JS -->
        <script src="/js/vendor/jquery-1.12.4.min.js"></script>
        <script src="/js/bootstrap.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.js"></script>
</body>

