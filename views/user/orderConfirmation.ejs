  <style>
    body {
      font-family: "Josefin Sans", sans-serif;
      background-color: #fff;
    }
  </style>
</head>

<body>
  <!-- Navbar -->
  <%- include('../partials/user/navbar') %>
    <%- include('../partials/user/_toastify', { success: success, error: error }) %>

      <!-- Hero Section -->
