<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Reset Password</title>

  <!-- Bootstrap CSS -->
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
    rel="stylesheet"
  />

  <!-- Custom CSS -->
  <link rel="stylesheet" href="/css/reset.css" />
</head>
<body>
  <%- include('../partials/user/_toastify', { success: success, error: error }) %>
  <!-- Reset Password Modal -->
  <div class="modal show d-block" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content reset-modal">
        <form action="/resetpassword" method="POST">
          <div class="modal-body text-center">
            <h4 class="reset-title">Reset Password</h4>

            <input type="hidden" name="id" value="<%= userId %>" />  
            <input type="hidden" name="email" value="<%= email %>" />

            <div class="form-group text-start mb-3">
              <label class="form-label">New Password</label>
              <input type="password" name="password" class="form-control reset-input" required />
            </div>

            <div class="form-group text-start mb-3">
              <label class="form-label">Re-enter New Password</label>
              <input type="password" name="confirmPassword" class="form-control reset-input" required />
            </div>

            <% if (message) { %>
              <div class="text-success mt-2"><%= message %></div>
            <% } %>

            <button type="submit" class="btn btn-reset mt-3">Submit</button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
