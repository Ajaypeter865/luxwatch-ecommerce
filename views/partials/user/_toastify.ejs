<!-- Toastify CSS & JS -->
<link rel="stylesheet" href="/node_modules/toastify-js/src/toastify.css">
<script src="/node_modules/toastify-js/src/toastify.js"></script>

<!-- Toastify Notifications -->
<% if (success) { %>

  <script>    
  console.log('Hey');
  
    Toastify({
      text: "<%= success %>",
      duration: 3000,
      gravity: "top",
      position: "right",
      backgroundColor: "linear-gradient(to right, #00b09b, #96c93d)",
      close: true
    }).showToast();
  </script>
  <% } %>
    <% if (error) { %>
      <script>
        Toastify({
          text: "<%= error %>",
          duration: 3000,
          gravity: "top",
          position: "right",
          backgroundColor: "linear-gradient(to right, #ff5f6d, #ffc371)",
          close: true
        }).showToast();
      </script>
      <% } %>

      <script>console.log('Toastify partial loaded');</script>
